<h1>Here are the Samurais</h1>
<%= link_to "Create Samurai", new_samurai_path, class: 'btn btn-primary'%>
<div class="cards">
  <% @samurais.each do |samurai| %>
    <div class="card-trip">
    <%= cl_image_tag(samurai.photo.key) %>
      <div class="card-trip-infos">
        <div>
          <h2><%="#{samurai.name} Samurai"%></h2>
          <p><%= "Description: #{samurai.description}" %></p>
        </div>
        <h2 class="card-trip-pricing">
          <div class = "info_box">
            <p><i class="fa-solid fa-people-group"></i><%= samurai.group_size %></p>
            <p><%= "Â¥#{samurai.price_per_day}" %></p>
            </div>
        </h2>
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/05/Ii_Naosuke_Portrait_by_Ii_Naoyasu.jpg" class="card-trip-user avatar-bordered" />
      </div>
      <%= link_to "",samurai_path(samurai),class: 'card-trip-link'%>
    </div>
  <% end %>
</div>
