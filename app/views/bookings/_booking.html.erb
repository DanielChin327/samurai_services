<div class="card-product">
  <%= cl_image_tag(booking.samurai.photo.key) %>
  <div class="card-product-infos booking-card-width">
    <h3><%="#{booking.samurai.name} samurais"%></h3>
    <h4> <%= "Period: #{booking.num_of_days} days" %></h4>
    <h4><i class="fa-regular fa-calendar"></i> <%= booking.start_date %> - <%= booking.end_date %> (<%= booking.num_of_days %> days)</h4>
    <p><%= booking.samurai.description %></p>
  </div>
  <%= render "bookings/status", booking: booking %>
</div>
